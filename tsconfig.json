{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@app/*": ["src/app/*"],
            "@api/*": ["src/app/modules/api/*"],
            "@env/*": ["src/environments/*"]
        },
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types", "node_modules/rxjs"],
        "lib": ["es2018", "dom"]
    }
}
